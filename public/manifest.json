  "shortcuts": [
    {
      "name": "Financial Goals",
      "short_name": "Goals",
      "description": "Track your financial recovery progress and milestones",
      "url": "/goals.html",
      "icons": [{ "src": "/icons/shortcut-goals.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Upload Statements",
      "short_name": "Upload CSV",
      "description": "Import and analyze bank statements with AI insights",
      "url": "/csv-upload.html",
      "icons": [{ "src": "/icons/shortcut-upload.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Add to Emergency Fund",
      "short_name": "Emergency Fund",
      "description": "Quickly add money to emergency savings",
      "url": "/goals.html#emergency-fund",
