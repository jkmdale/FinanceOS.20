  "file_handlers": [
    {
      "action": "/csv-upload.html",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+financeos",
      "url": "/?handler=%s"
    }
  ],
  "share_target": {
    "action": "/csv-upload.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "csv_file",
          "accept": ["text/csv", ".csv", "application/vnd.ms-excel", ".xls", ".xlsx"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "any",
  "related_applications": [],
  "prefer_related_applications": false,
  "iarc_rating_id": "",
  "version": "1.0.0",
  "scope_extensions": [
    {
      "origin": "https://jkmdale.github.io"
    }
  ],
  "id": "financeos-pwa",
  "start_url_params": {
    "utm_source": "pwa",
    "utm_medium": "homescreen"
  }
}
