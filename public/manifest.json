    },
    {
      "name": "Budget Recovery Plan",
      "short_name": "Recovery Plan",
      "description": "View your 3-month deficit elimination strategy",
      "url": "/goals.html#budget-recovery",
      "icons": [{ "src": "/icons/shortcut-recovery.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Quick Transaction Entry",
      "short_name": "Add Transaction",
      "description": "Quickly log income or expense",
      "url": "/?action=add-transaction",
      "icons": [{ "src": "/icons/shortcut-transaction.png", "sizes": "96x96", "type": "image/png" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "540x720",
